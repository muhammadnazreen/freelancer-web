@page
@model freelancer.Pages.Users.IndexModel
@{
}

<br />
<h2>List of Freelancers</h2>
<a class="btn btn-primary btn-sm" href="/Users/Register">New User</a>
<table class="table">
    <thead>
        <tr>
            <th>No</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone No</th>
            <th>Skillsets</th>
            @*<th>Created by</th>*@
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.listUser)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.mail</td>
                <td>@item.skillsets</td>
                <td>@item.hobby</td>
                @*<td>@item.udt</td>*@
                <td>
                    <a class="btn btn-primary btn-sm" href="/Users/Update?id=@item.id">Update</a>
                    <a class="btn btn-danger btn-sm" href="/Users/Delete?id=@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>